SELECT cast(bufratio/0.1 AS int) bin,
       avg(cleanedplaytimems)
FROM
  (SELECT 0 AS KEY,
          if(bufftimems > 0, bufftimems, 0) / (if(bufftimems > 0, bufftimems, 0) + if(playtimems > 0, playtimems, 0)) bufratio,
          IF (playtimems > 0,
              playtimems,
              0) cleanedplaytimems
   FROM anon_sdm2_ss) t
GROUP BY cast(bufratio/0.1 AS int)
ORDER BY bin
